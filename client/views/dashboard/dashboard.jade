.row
  .col-xs-4
    .about
      .row
        .col-xs-6
          .userPhoto(style='background-image:url({{thisUser.photo}});')
          button.btn.btn-sm.btn-danger(ng-click='togglePhoto()') Edit Photo
          form(role='form', novalidate, ng-show='showPhoto', name='photoForm')
            .form-group
              input.form-control(ng-pattern='/^http/', required, ng-model='thisUser.photo', type='text', name='thisUser.photo')
        .col-xs-6
          h4 User Email:
          h5 {{thisUser.email}}
          &nbsp
          h4 Number of Games played:
          h5 {{thisUser.games.length}}
  .col-xs-8
    .last
      h1 Your Dashboard
.row
  h1 Game History
  .allGames(ng-repeat='g in thisUser.games.slice().reverse()')
    .col-xs-12
      .col-xs-4
        h4 Game # {{$index + 1}}
      .col-xs-4
        h4 Play Date: {{g.creationDate | date:'short'}}
      .col-xs-4
        h4 Total Time: {{g.time.toFixed(2)}} years
    .col-xs-12
      table.table.tabBack
        thead
          tr
            th
            th Stage 1
            th Stage 2
            th Stage 3
            th Stage 4
            th Stage 5
            th Stage 6
            th Stage 7
            th Stage 8
            th Stage 9
            th Stage 10
        tbody
          tr
            td Health
            td {{g.stats[0].health}}
            td {{g.stats[1].health}}
            td {{g.stats[2].health}}
            td {{g.stats[3].health}}
            td {{g.stats[4].health}}
            td {{g.stats[5].health}}
            td {{g.stats[6].health}}
            td {{g.stats[7].health}}
            td {{g.stats[8].health}}
            td {{g.stats[9].health}}
          tr
            td Time (yrs)
            td {{g.stats[0].time.toFixed(3)}}
            td {{g.stats[1].time.toFixed(3)}}
            td {{g.stats[2].time.toFixed(3)}}
            td {{g.stats[3].time.toFixed(3)}}
            td {{g.stats[4].time.toFixed(3)}}
            td {{g.stats[5].time.toFixed(3)}}
            td {{g.stats[6].time.toFixed(3)}}
            td {{g.stats[7].time.toFixed(3)}}
            td {{g.stats[8].time.toFixed(3)}}
            td {{g.stats[9].time.toFixed(3)}}
