h3 Dashboard

.row
  .col-xs-4
    .about
      .row
        .col-xs-6
          .userPhoto(style='background-image:url({{thisUser.photo}});')
          button.btn.btn-sm.btn-danger(ng-click='togglePhoto()') Edit Photo
          form(role='form', novalidate, ng-show='showPhoto', name='photoForm')
            .form-group
              input.form-control(ng-pattern='/^http/', required, ng-model='thisUser.photo', type='text', name='thisUser.photo')
        .col-xs-6
          h4 User Email:
          h5 {{thisUser.email}}
          &nbsp
          h4 Number of Games played:
          h5 {{thisUser.games.length}}
  .col-xs-8
    .last
      h1 LAST GAME GRAPH
.row
  .allGames
    h1 ALL games

